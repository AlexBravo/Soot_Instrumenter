<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:id="@+id/favorites" app:background="@color/blue_bg" app:layout_width="match_parent" app:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView app:id="@+id/favoritesRecycler" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_below="@+id/favoritesTitleBar" />
    <com.waze.menus.AddressItemView app:id="@+id/floatingAddressItemView" app:visibility="gone" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x4801" />
    <RelativeLayout app:id="@+id/favoritesTitleBar" app:background="@color/blue_bg" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x4801" app:layout_toRightOf="@+id/floatingAddressItemView" app:layout_alignParentTop="true">
