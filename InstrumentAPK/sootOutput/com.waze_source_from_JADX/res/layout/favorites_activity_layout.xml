        <com.waze.view.text.WazeTextView app:textSize="18sp" app:textColor="@color/White" app:id="@+id/btnEditDone" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginRight="16dp" app:text="*Edit" app:layout_alignParentRight="true" app:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>
