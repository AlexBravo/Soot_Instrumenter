<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/com.waze" app:background="@color/blue_bg" app:padding="0dp" app:layout_width="match_parent" app:layout_height="match_parent">
    <com.waze.view.title.TitleBar app:id="@+id/shareFbMainTitleBar" app:layout_width="match_parent" app:layout_height="wrap_content" />
    <RelativeLayout app:padding="14dp" app:layout_width="match_parent" app:layout_height="match_parent">
        <LinearLayout app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" app:orientation="vertical" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_marginTop="30dp">
            <com.waze.view.text.WazeTextView app:textStyle="UNKNOWN_DATA_0x0" app:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:id="@+id/sharefbTitleText" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginLeft="4dp" app:layout_marginTop="10dp" app:layout_marginRight="4dp" app:text="Alex is driving to Manhattan, NY using Waze." style="@style/textOnBg" />
            <LinearLayout app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:orientation="vertical" app:background="@drawable/note_bg" app:padding="0dp" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="10dp"
                <LinearLayout app:orientation="vertical" app:padding="0dp" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_margin="14dp">
                    <com.waze.view.text.WazeTextView app:textStyle="UNKNOWN_DATA_0x0" app:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:id="@+id/sharefbPostToWalltitle" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginLeft="10dp" app:text="post to event wall:" style="@style/textOnFbPost" />
                    <LinearLayout app:orientation="vertical" app:id="@+id/shareFbMainTextContainer" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x6401" app:layout_marginBottom="8dp">
                        <com.waze.view.text.WazeEditText app:textSize="18dp" app:ellipsize="end" app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:id="@+id/shareFbMainText" app:background="@drawable/text_box" app:padding="15dp" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_weight="1.0" />
                    </LinearLayout>
                    <LinearLayout app:orientation="horizontal" app:id="@+id/shareFbMainUserDataContainer" app:padding="0dp" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_margin="10dp" app:layout_below="@+id/shareFbMainTextContainer">
                        <ImageView app:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:layout_width="wrap_content" app:layout_height="wrap_content" app:src="@drawable/share_image" app:scaleType="center" />
                        <LinearLayout app:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:orientation="horizontal" app:background="@drawable/vertical_divider" app:padding="0dp" app:layout_width="wrap_content" app:layout_height="match_parent" app:layout_marginLeft="8dp" />
                        <com.waze.view.text.AutoResizeTextView app:textStyle="UNKNOWN_DATA_0x0" app:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:id="@+id/shareFbMainUserTripDetails" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginLeft="10dp" app:text="Alex is driving to Manhattan, NY using Waze." app:maxLines="3" app:minSize="17sp" style="@style/textOnFbPost" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout app:id="@+id/shareFbMainPostFbButton" app:background="@drawable/button_blue" app:padding="0dp" app:clickable="true" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginLeft="20dp" app:layout_marginTop="25dp" app:layout_marginRight="20dp" app:layout_alignParentBottom="true" app:layout_centerHorizontal="true">
                <com.waze.view.text.WazeTextView app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:id="@+id/shareFbMainPostFbButtonText" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="10dp" app:layout_marginBottom="12dp" app:text="Post to Facebook" style="@style/buttonBlueText" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
