<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:background="@color/BlueWhale" app:layout_width="match_parent" app:layout_height="match_parent">
    <com.waze.view.title.TitleBar app:id="@+id/theTitleBar" app:layout_width="match_parent" app:layout_height="wrap_content" />
    <ScrollView app:layout_width="match_parent" app:layout_height="match_parent" app:layout_below="@+id/theTitleBar">
        <LinearLayout app:orientation="vertical" app:layout_width="match_parent" app:layout_height="wrap_content">
            <com.waze.view.text.WazeTextView app:id="@+id/carpoolFAQQuestion" app:layout_marginTop="15dp" app:text="*Is this a question ?" app:position="atThumb" style="@style/BlueTitle" />
            <com.waze.view.text.WazeTextView app:id="@+id/carpoolFAQAnswer" app:layout_marginTop="-5dp" app:text="*Yes, this is an anwer." app:position="atThumb" style="@style/RegularText" />
            <com.waze.settings.WazeSettingsView app:id="@+id/carpoolFAQAction" app:layout_width="match_parent" app:position="aboveThumb" app:settingsType="0" style="@style/settingsSelection" />
            <ImageView app:id="@+id/carpoolFAQActionShadow" app:layout_width="match_parent" app:layout_height="wrap_content" app:src="@drawable/cell_shadow_dark" app:scaleType="fitXY" />
            <Space app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_weight="1.0" />
        </LinearLayout>
    </ScrollView>
    <ImageView app:layout_width="match_parent" app:layout_height="wrap_content" app:src="@drawable/topbar_shadow" app:scaleType="fitXY" app:layout_below="@+id/theTitleBar" />
</RelativeLayout>
